<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_blue"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <ImageView
        android:id="@+id/pokeImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dip"
        tools:srcCompat="@tools:sample/avatars" />
    />

    <TextView
        android:layout_width="85dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:layout_alignLeft="@id/pokeName"
        android:textStyle="bold|italic"
        android:layout_below="@id/pokeImage"
        android:layout_marginLeft="-85dp"
        android:textSize="26sp"
        android:text=" Nome:" />

    <TextView
        android:id="@+id/pokeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pokeImage"
        android:textStyle="bold|italic"
        android:layout_marginLeft="160dip"
        android:textSize="26sp"
        android:layout_marginTop="10dip"
        android:text="TextView" />


    <TextView
        android:layout_width="85dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:layout_below="@id/pokeName"
        android:textStyle="bold|italic"
        android:layout_alignLeft="@id/pokeId"
        android:layout_marginLeft="-85dp"
        android:text=" N Id: "
        android:textSize="26sp" />

    <TextView
        android:id="@+id/pokeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dip"
        android:textSize="26sp"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dip"
        android:layout_below="@id/pokeName"
        android:text="TextView"
       />

    <TextView
        android:layout_width="85dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dip"
        android:layout_below="@id/pokeId"
        android:layout_marginLeft="-85dp"
        android:textStyle="bold|italic"
        android:layout_alignLeft="@id/pokeType"
        android:text=" Tipo:"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/pokeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dip"
        android:layout_below="@id/pokeId"
        android:textStyle="bold|italic"
        android:textSize="26sp"
        android:layout_marginTop="10dip"
        android:text="TextView"
 />


</RelativeLayout>
